%read signal
[audioIn,fs]=audioread('Piano.wav');
%choose one column of the matrix if there are harmonies
audioIn = audioIn(:,1);

f0 = pitch(audioIn,fs);
sampleSize = size(f0);
sampleSize = sampleSize(:,1);
x = 1:sampleSize;
A = f0;
TF = islocalmax(A,'MinSeparation',round(sampleSize/92));
plot(x,A,x(TF),A(TF),'r*')
ylabel('Pitch (Hz)')
xlabel('Sample Number')
